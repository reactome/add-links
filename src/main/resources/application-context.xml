<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd">

	<context:property-placeholder location="classpath:addlinks.properties" />

	<bean id="maxFileAge" class="java.time.Duration" factory-method="of">
		<constructor-arg index="0">
			<value type="java.lang.Long">24</value>
		</constructor-arg>
		<constructor-arg index="1">
			<value type="java.time.temporal.ChronoUnit">HOURS</value>
		</constructor-arg>
	</bean>

	<bean id="OrphanetToUniprotReferenceDNASequence"
		class="org.reactome.addlinks.dataretrieval.AuthenticatingFileRetriever">
		<property name="dataURL"
			value="http://www.orphadata.org/data/BDD_partners/genes_diseases_external_references.xml" />
		<property name="fetchDestination" value="/tmp/genes_diseases_external_references.xml" />
		<property name="maxAge">
			<ref bean="maxFileAge"/>
		</property>
		<property name="userName" value="${orphanet.user}" />
		<property name="password" value="${orphanet.password}" />
	</bean>


	<bean id="PROToReferencePeptideSequence" class="org.reactome.addlinks.dataretrieval.FileRetriever">
		<property name="dataURL"
			value="ftp://ftp.pir.georgetown.edu/databases/ontology/pro_obo/PRO_mappings/uniprotmapping.txt" />
		<property name="fetchDestination" value="/tmp/uniprotmapping.txt" />
		<property name="maxAge">
			<ref bean="maxFileAge"/>
		</property>
	</bean>

	<bean id="IntActDatabaseIdentifierToComplexOrReactionlikeEvent"
		class="org.reactome.addlinks.dataretrieval.FileRetriever">
		<property name="dataURL"
			value="ftp://ftp.ebi.ac.uk/pub/databases/intact/current/various/reactome.dat" />
		<property name="fetchDestination" value="/tmp/reactome.dat" />
		<property name="maxAge">
			<ref bean="maxFileAge"/>
		</property>
	</bean>

	<bean id="RHEAIdentifierToReactionlikeEvent" class="org.reactome.addlinks.dataretrieval.FileRetriever">
		<property name="dataURL"
			value="http://www.ebi.ac.uk/rhea/rest/1.0/ws/reaction?q=REACT*" />
		<property name="fetchDestination" value="/tmp/RHEAReactome.xml" />
		<property name="maxAge">
			<ref bean="maxFileAge"/>
		</property>
		<property name="timeout">
			<bean class="java.time.Duration" factory-method="of">
				<constructor-arg index="0">
					<value type="java.lang.Long">20</value>
				</constructor-arg>
				<constructor-arg index="1">
					<value type="java.time.temporal.ChronoUnit">SECONDS</value>
				</constructor-arg>
			</bean>
		</property>
		<property name="numRetries" value="2" />
	</bean>

	<bean id="DOCKBlasterToUniprotDatabaseIdentifier" class="org.reactome.addlinks.dataretrieval.FileRetriever">
		<property name="dataURL"
			value="http://data.docking.org/2010/knd/knd/forMatt.txt" />
		<property name="fetchDestination" value="/tmp/DOCKBlasterToUniprot.txt" />
		<property name="maxAge">
			<ref bean="maxFileAge"/>
		</property>
	</bean>

	<bean id="FlyBaseToUniprotReferenceDNASequence" class="org.reactome.addlinks.dataretrieval.FileRetriever">
		<property name="dataURL"
			value="ftp://ftp.flybase.net/releases/current/precomputed_files/genes/fbgn_NAseq_Uniprot_fb_2016_03.tsv.gz" />
		<property name="fetchDestination" value="/tmp/FlyBase.tsv.gz" />
		<property name="maxAge">
			<ref bean="maxFileAge"/>
		</property>
	</bean>

	<bean id="HmdbMolecules" class="org.reactome.addlinks.dataretrieval.FileRetriever">
		<property name="dataURL"
			value="http://www.hmdb.ca/system/downloads/current/hmdb_metabolites.zip" />
		<property name="fetchDestination" value="/tmp/hmdb_metabolites.zip" />
		<property name="maxAge">
			<ref bean="maxFileAge"/>
		</property>
	</bean>

	<bean id="HmdbProteins" class="org.reactome.addlinks.dataretrieval.FileRetriever">
		<property name="dataURL"
			value="http://www.hmdb.ca/system/downloads/current/hmdb_proteins.zip" />
		<property name="fetchDestination" value="/tmp/hmdb_proteins.zip" />
		<property name="maxAge">
			<ref bean="maxFileAge"/>
		</property>
	</bean>

	<bean id="OrthologsFromZinc" class="org.reactome.addlinks.dataretrieval.FileRetriever">
		<property name="dataURL"
			value="http://zinc15.docking.org/orthologs.txt:uniprot?count=all" />
		<property name="fetchDestination" value="/tmp/uniprot_ortholog.txt" />
		<property name="maxAge">
			<ref bean="maxFileAge"/>
		</property>
	</bean>

	<bean id="Zinc" class="org.reactome.addlinks.dataretrieval.FileRetriever">
		<property name="dataURL"
			value="http://zinc.docking.org/db/byvendor/chebi/chebi_purch.xls" />
		<property name="fetchDestination" value="/tmp/zinc_chebi_purch.xls" />
		<property name="maxAge">
			<ref bean="maxFileAge"/>
		</property>
	</bean>
</beans>