<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" strict="true" name="XMLConfigTest" packages="org.apache.logging.log4j.test">
	<Appenders>
		<!-- STDOUT appender. -->
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36}#%M - %msg%n" />
		</Console>
		<!-- Write to logs/addinks.log -->
		<RollingRandomAccessFile name="RollingRandomAccessFile" fileName="logs/addlinks.log" filePattern="logs/$${date:yyyy-MM}/addlinks-%d{MM-dd-yyyy}-%i.log.gz">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36}#%M - %msg%n" />
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="250 MB" />
			</Policies>
		</RollingRandomAccessFile>
	</Appenders>
	<Loggers>
		<Root level="debug">
			<!-- only write INFO level to the file. -->
			<AppenderRef ref="RollingRandomAccessFile" level="debug"/>
			<!-- Console shows everything at DEBUG level-->
			<AppenderRef ref="Console" level="info" />
		</Root>
	</Loggers>
</Configuration>